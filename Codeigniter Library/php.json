/* *********************************
****** Codeigniter Shorthand  
********************************* */

/* ci Form Validation */

"CI Load Form Validation Library" :{
	"prefix": "ci-load-form-validation",
	"body": [
			"$$this->load->library('form_validation');"			
		],
		"description": "Codeigniter Load Form Validation Library"
},

"CI Set Validation Rules" :{
	"prefix": "ci-validation-rule",
	"body": [
			"$$this->form_validation->set_rules('$field', '$interface_name', '$rule');"			
		],
		"description": "Codeigniter Set Validation Rules"
},

"CI Run Validation " :{
	"prefix": "ci-run-validation",
	"body": [
			"if ($$this->form_validation->run() !== FALSE) {",
                "\t \/\/ success scenario \n\t",
				"}\n",
				"else {",
                "\t \/\/ faild scenario \n}"			
		],
		"description": "Codeigniter run validation rules"
},

"CI Validation Delimiters " :{
	"prefix": "ci-set-validation-delimiters",
	"body": [
			"\/\/ to clear error tag sufix and prefix like <p>",
			"$$this->form_validation->set_error_delimiters('','');"
		],
		"description": "Codeigniter validation delimiters"
}



} // end of file